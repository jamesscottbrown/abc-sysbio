#!/usr/bin/python

import abcsysbio
import sys
import argparse

if __name__ == '__main__':

    parser = argparse.ArgumentParser(description="Generate summary of an abc-sysbio run")

    # Input options
    parser.add_argument('--files', '-f', help="a comma separated list of xml model files")
    parser.add_argument('--data', '-d', help=' a data file with columns <time> <variable1> <variables2> <variable3>')
    parser.add_argument('--input_file_name', '-i', help='the name of the xml file to write (default input_file_template.xml)')
    parser.add_argument('--summary_file_name', '-s', help='the name of the summary file to write (default model_summary.txt)')

    args = parser.parse_args()

    input_files = []
    if args.input_file_name:
        input_files = str(args.input_file_name).split(',')

    data = None
    if args.data:
        data = args.data

    filename = "input_file_template.xml"
    if args.input_file_name:
        filename = args.input_file_name

    sumname = "model_summary.txt"
    if args.summary_file_name:
        sumname = args.summary_file_name

    print "input_files:", input_files
    print "data:", data
    print "filename:", filename
    print "sumname:", sumname

    if len(input_files) == 0:
        sys.exit("No model files have been specified. Exiting.")

    abcsysbio.generate_template(input_files, filename=filename, sumname=sumname, dataname=data)
